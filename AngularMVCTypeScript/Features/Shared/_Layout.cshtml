@using AngularMVCTypeScript
@{var controller = ViewContext.RouteData.Values["controller"];}
<html ng-app="@Settings.Angular.ApplicationName" ng-controller="@(controller) as Model">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="The description of my page" />
    <title ng-bind="">@ViewBag.Title</title>
    @Styles.Render("~/Content/css")

</head>
<body>
    @Html.Partial(MVC.Shared.Views.Navigation)

    @RenderBody()

    @{
        foreach (var scriptLibraryBundle in Links.Bundles.ScriptLibraryBundles)
        {
            @Scripts.Render(scriptLibraryBundle.Path);
        }

        foreach (var scriptApplicationBundle in Links.Bundles.ScriptApplicationBundles)
        {
            @Scripts.Render(scriptApplicationBundle.Path);
        }
    }

    @Html.Partial(MVC.Core.Views.BootstrapDataService)

    @Html.Partial(MVC.Core.Views.Application)
</body>

</html>
